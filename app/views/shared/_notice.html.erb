<div id="notice_wrapper">
  <% if notice %>
     <p class="notice" style="background:rgba(91, 192, 222, 0.80);color: #fff;font-size: 16px;font-weight: 700,letter-spacing: 1px;margin: 0;padding: 10px 0;text-align: center;text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6)"><%= notice %></p>
  <% elsif alert %>  
     <p class="alert" style="background:rgba(255, 100, 5, 0.80);color: #fff;font-size: 16px;font-weight: 700,letter-spacing: 1px;margin: 0;padding: 10px 0;text-align: center;text-shadow: 0 1px 2px rgba(0, 0, 0, 0.6)"><%= alert %></p>
  <% end %>   
</div>